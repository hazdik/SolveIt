<!DOCTYPE html>
<html>
  <head>
    <title>SolveIt</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet"/>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.29/angular.min.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.8/angular-ui-router.js"></script>
    <script src="/javascripts/appScript.js" ></script>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body class="container-fluid my-background" ng-app="AppModule">
    <div class="row">
      <ui-view></ui-view>
    </div>
    <script type="text/ng-template" id="./login.html">
      <div class="col-md-5 my-centered my-opacity" >
        <form role="form" ng-submit="login()">
          <h3>Login</h3><br/>
          <div class="form-group">
            <label for="username">Username</label>
            <input class="form-control" id="username" type="text" ng-model="username"/>
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input class="form-control" id="password" type="password" ng-model="password"/>
          </div>
          <br/>
          <br/>
          <div class="form-group">
            <button class="btn btn-primary btn-block" id="password" type="submit" placeholder="Password" ng-model="$scope.password">Login</button>
          </div>
        </form>
      </div>
    </script>
  </body>
</html>
